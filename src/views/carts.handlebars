<h1>Carro de compra</h1>

<div class="row">
    {{#each cart.products}}
        <div class="col-md-12 mb-4"> 
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title col-md-4">Nombre: {{this.productId.title}}</h5>
                    <p class="card-text col-md-4">Precio: {{this.productId.price}}</p>
                    <p class="card-text col-md-4">Cantidad: {{this.quantity}}</p>
                    <hr>
            
                    
                    <button onclick="eliminarProducto('{{../cart._id}}', '{{this.productId._id}}')" class="btn btn-danger">Eliminar</button>

                </div>
            </div>
        </div>
    {{/each}}

    <div class="col-md-12">
        <h2>Total: {{total}}</h2>
        <form action="/api/carts/{{cart._id}}/purchase" method="POST">
            <button type="submit" class="btn btn-success">Finalizar compra</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="/js/deleteProduct.js"></script>